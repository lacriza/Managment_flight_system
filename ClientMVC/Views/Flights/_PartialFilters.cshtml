@model ClientMVC.Models.FiltersRequest

<form asp-controller="Flights" asp-action="Index" method="post" class="mt-3 mb-1 ">
  <div class="form-group">
    <div class="form-check">
      @Html.RadioButtonFor(model => model.FlightType, "null", new { @class = "form-check-input ", @name = "FlightType", Checked = "checked" })
      @Html.LabelFor(model => model.FlightType, "All", new { @class = "form-check-label" })
    </div>
    <div class="form-check">
      @Html.RadioButtonFor(model => model.FlightType, "0", new { @class = "form-check-input", @name = "FlightType" })
      @Html.LabelFor(model => model.FlightType, "Regular flight", new { @class = "form-check-label" })
    </div>
    <div class="form-check">
      @Html.RadioButtonFor(model => model.FlightType, "1", new { @class = "form-check-input", @name = "FlightType" })
      @Html.LabelFor(model => model.FlightType, "Low cost flight", new { @class = "form-check-label" })
    </div>
    <div class="form-check ">
      @Html.RadioButtonFor(model => model.FlightType, "2", new { @class = "form-check-input", @name = "FlightType" })
      @Html.LabelFor(model => model.FlightType, "Charter flight", new { @class = "form-check-label" })
    </div>
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.DateFrom, "Date from:", new { @class = "form-check-label" }) <br>
    @Html.EditorFor(model => model.DateFrom, new { @class = "datepicker" })
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.DateTo, "Date to:", new { @class = "form-check-label" }) <br>
    @Html.EditorFor(model => model.DateTo, new { @class = "datepicker" })
  </div>
  <input type="submit" class="btn btn-navy btn-lg btn-block" value="Apply" />
</form>

<script>
  $(document).ready(function () {
    $(".datepicker").datepicker({
      dateFormat: "dd-mm-yy",
      startDate: '-3d',
      changemonth: true,
      changeyear: true
    });
  });
</script>